CREATE DATABASE devsolution;
USE devsolution;

#Criar tabela de usu√°rios
CREATE TABLE users(
	 id				INT NOT NULL AUTO_INCREMENT 
    ,name			VARCHAR(255)
    ,email			VARCHAR(255)
    ,cpf			VARCHAR(255)
    ,birthday 		DATE
    ,phone			VARCHAR(255)
    ,zipcode		VARCHAR(255)
    ,address		VARCHAR(255)
    ,picture_path 	VARCHAR(255)
    ,user			VARCHAR(255)
    ,password		VARCHAR(255)
	,created_at		DATETIME
    ,updated_at		DATETIME,
    PRIMARY KEY (id)
) DEFAULT CHARSET= utf8;

#Criar tabela de carros
CREATE TABLE cars(
	 id				INT NOT NULL AUTO_INCREMENT 
    ,model			VARCHAR(255)
    ,brand			VARCHAR(255)
    ,year			INT
    ,km 			INT
    ,color			VARCHAR(255)
	,created_at		DATETIME
    ,updated_at		DATETIME,
    PRIMARY KEY (id)
) DEFAULT CHARSET= utf8;

#Criar tabela deoficinas
CREATE TABLE workshops(
	 id				INT NOT NULL AUTO_INCREMENT 
    ,name			VARCHAR(255)
    ,address		VARCHAR(255)
    ,type			VARCHAR(255)
	,created_at		DATETIME
    ,updated_at		DATETIME,
    PRIMARY KEY (id)
) DEFAULT CHARSET= utf8;